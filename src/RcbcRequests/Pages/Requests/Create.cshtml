@page
@model CreateRequestModel
@{
    ViewData["Title"] = "Create Request";
}
<div class="container py-4" style="max-width: 720px;">
  <h2 class="h4 mb-3">Create Request</h2>

  <!-- Form Tag Helper -> emits __RequestVerificationToken automatically -->
  <form method="post" asp-antiforgery="true">
    <div class="mb-3">
      <label class="form-label">Created By (UserID)</label>
      <input class="form-control" type="number" asp-for="Input.CreatedBy" required />
    </div>
    <div class="mb-3">
      <label class="form-label">Request Type</label>
      <input class="form-control" type="text" asp-for="Input.RequestType" required />
    </div>
    <div class="mb-3">
      <label class="form-label">Details</label>
      <textarea class="form-control" rows="4" asp-for="Input.Details" required></textarea>
    </div>
    <div class="d-flex gap-2">
      <button class="btn btn-primary" type="submit">Save</button>
      <a class="btn btn-outline-secondary" href="/Requests">Cancel</a>
    </div>
  </form>
</div>
