@page
@model EditRequestModel
@{
    ViewData["Title"] = "Edit Request";
}
<div class="container py-4" style="max-width: 720px;">
  <h2 class="h4 mb-3">Edit Request</h2>

  <form method="post" asp-antiforgery="true">
    <input type="hidden" asp-for="Input.RequestID" />

    <div class="mb-3">
      <label class="form-label">Request Type</label>
      <input class="form-control" type="text" asp-for="Input.RequestType" required />
    </div>

    <div class="mb-3">
      <label class="form-label">Details</label>
      <textarea class="form-control" rows="4" asp-for="Input.Details" required></textarea>
    </div>

    <div class="d-flex gap-2">
      <button class="btn btn-primary" type="submit">Update</button>
      <a class="btn btn-outline-secondary" href="/Requests">Back</a>
    </div>
  </form>
</div>

